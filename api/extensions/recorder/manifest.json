{
  "manifest_version": 2,
  "name": "recorder",
  "description": "The recorder extension for Steel Browser",
  "version": "1",
  "author": "Nasr Mohamed",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "recorder extension"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}